<html>
<head>
    <title>Bubble Sort in PHP</title>
</head>
<body>

<h2>Bubble Sort Program</h2>

<form method="post">
    <label>Enter numbers (comma-separated):</label><br>
    <input type="text" name="numbers" placeholder="e.g. 9,2,7,4,3" required><br><br>

    <label>Choose order:</label><br>
    <select name="order">
        <option value="asc">Ascending</option>
        <option value="desc">Descending</option>
    </select><br><br>

    <input type="submit" value="Sort">
</form>

<?php

// ---- Bubble Sort Function ----
function bubbleSort($arr, $order) {
    $n = count($arr);
    $swaps = 0;

    for ($i = 0; $i < $n - 1; $i++) {
        for ($j = 0; $j < $n - $i - 1; $j++) {

            // Compare depending on order
            $shouldSwap = ($order === "asc")
                ? ($arr[$j] > $arr[$j+1])
                : ($arr[$j] < $arr[$j+1]);

            if ($shouldSwap) {
                // Swap
                $temp = $arr[$j];
                $arr[$j] = $arr[$j+1];
                $arr[$j+1] = $temp;

                $swaps++;
            }
        }
    }

    return ["sorted" => $arr, "swaps" => $swaps];
}


// ---- Processing Form Input ----
if ($_SERVER["REQUEST_METHOD"] === "POST") {

    // Convert input string to array of integers
    $numbers = array_map('intval', explode(",", $_POST["numbers"]));
    $order = $_POST["order"];

    $original = $numbers; // keep original array

    $result = bubbleSort($numbers, $order);

    echo "<h3>Results:</h3>";
    echo "Original Array: [" . implode(", ", $original) . "]<br>";
    echo "Sorted ($order): [" . implode(", ", $result['sorted']) . "]<br>";
    echo "Total Swaps: " . $result['swaps'];
}

?>

</body>
</html>
